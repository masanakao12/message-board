<%= form_for(@message,html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label for="message_name" class="control-label col-md-1" aria-label="Left Align">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span>名前:</label>
  <div class="col-md-10">
     <%= f.text_field :name, class: "form-control" %>
   </div>
 </div>
 
  <div class="form-group">
   <label for="message_body" class="control-label col-md-1">内容:</label>
   <div class="col-md-10">
     <%= f.text_area :body, class: "form-control" %>
   </div>
 </div>
 
 <div class="form-group"> 
   <label for="message_age" class="control-label col-md-1">年齢:</label>
   <div class="col-md-10">
     <%= f.text_field :age, class: "form-control" %>
   </div>
  </div>

 
   <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" class="btn btn-primary">Create Message</button>
    </div>
  </div>
<% end %>