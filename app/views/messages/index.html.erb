<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message,html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1" aria-label="Left Align">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span>名前:</label>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-1">内容:</label>
    <div class="col-md-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <button type="submit" class="btn btn-primary">Create Message</button>
    </div>
  </div>
<% end %>
